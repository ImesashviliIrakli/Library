@model BookDetailsDto

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout for styling
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 border-right">
            <img src="@Model.Image" alt="Book Image" class="img-fluid rounded">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <div class="row">
                <div class="col-md-6">
                    <h5>Rating:</h5>
                    <p>@Model.Rating</p>
                </div>
                <div class="col-md-6">
                    <h5>Publication Date:</h5>
                    <p>@Model.PublicationDate.ToShortDateString()</p>
                </div>
            </div>
            <div>
                <h5>Authors:</h5>
                <ul class="list-unstyled">
                    @foreach (var author in Model.Authors)
                    {
                        <li>@author.FirstName @author.LastName</li>
                    }
                </ul>
            </div>
            <div class="mt-3">
                <h5>Status:</h5>
                <p>@(Model.IsTaken ? "Taken" : "Available")</p>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
