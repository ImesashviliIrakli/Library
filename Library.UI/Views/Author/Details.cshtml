@model AuthorDetailsDto

@{
    ViewData["Title"] = "Author Details";
}

<h2>Author Details</h2>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Year Of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.YearOfBirth
        </dd>
        <dt class="col-sm-2">
            Books
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var book in Model.Books)
                {
                    <li>@book.Title</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
